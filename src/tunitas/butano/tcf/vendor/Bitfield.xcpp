#divert <fpp>
#import tunitas.butano.tcf.detail.Bitfield
#import tunitas.butano.tcf.id.ALL
#import tunitas.butano.tcf.vendor.Null
#import tunitas.butano.tcf.vendor.Invalid
namespace tunitas::butano::tcf::vendor {
  //
  // The vendor bitfield is a 1-based vector<bool>
  // whereas the standard vector<bool> is a 0-based array.
  // This becomes significant when encoding & decoding
  //
  // Also, the Bitfield is indexable by id::Vendor, not by unsigned size_t
  //
  // Usage: (otherwise it's the same as std::vector<bool>)
  //
  using Bitfield = tcf::detail::Bitfield<id::Vendor, vendor::Null, vendor::Invalid>;
}
#endiv

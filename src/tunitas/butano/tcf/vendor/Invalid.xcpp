#divert <fpp>
namespace tunitas::butano::tcf::vendor {
  //
  // The vendor is totally invalid (out of the acceptable range of 16 bits).
  // See the commentariat in detail::Out_Of_Range for semantic fitness and purpose.
  //
  // The null vendor is a "valid" vendor.  Instead throw Null for the null vendor.
  // If the vendor is outside of maxVendorId, then throw Inappropriate.
  //
  // Usage:
  //
  //   throw Invalid();
  //
  class Invalid;
}
#endiv
#divert <hpp>
#import tunitas.butano.tcf.vendor.detail.Out_Of_Range
class tunitas::butano::tcf::vendor::Invalid : public detail::Out_Of_Range {
  using ancestor = detail::Out_Of_Range;
public:
  inline Invalid();
  using ancestor::Out_Of_Range;
  inline Invalid(Identifier offending_id, tcf::exception::Range range);
};
#endiv
#divert <ipp>
tunitas::butano::tcf::vendor::Invalid::Invalid()
  : ancestor("invalid vendor")
{ }
tunitas::butano::tcf::vendor::Invalid::Invalid(Identifier offending_id, tcf::exception::Range range)
  : ancestor(format("Vendor", "invalid", offending_id, range))
{ }
#endiv
